<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<Pane fx:id="list1" prefWidth="300.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scuttlr.application.controllers.TaskListController">
   <children>
              <VBox fx:id="columnVBox" fillWidth="false">
                  <children>
            <Label fx:id="listTitleLabel" text="List" />
                      <ToolBar>
                          <items>
                              <Button mnemonicParsing="false" text="&lt;&lt;" />
                              <Button fx:id="deleteListButton" mnemonicParsing="false" onAction="#deleteList" text="Delete list" />
                              <Button fx:id="newTaskButton" mnemonicParsing="false" onAction="#createNewTask" text="New task" />
                              <Button mnemonicParsing="false" text="&gt;&gt;" />
                          </items>
                      </ToolBar>
                      <TitledPane fx:id="taskTitledPane" animated="false" text="Task" wrapText="true" />
                  </children>
              </VBox>
   </children>
</Pane>
