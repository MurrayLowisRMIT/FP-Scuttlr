<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="columnVBox" fillWidth="false" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scuttlr.application.controllers.ColumnController">
   <children>
      <TextField fx:id="columnNameTextField" alignment="CENTER" maxWidth="1.7976931348623157E308" onKeyTyped="#updateColumnName" promptText="Column name" />
      <ToolBar fx:id="toolBar">
         <items>
            <Button fx:id="moveLeftButton" mnemonicParsing="false" text="&lt;&lt;" />
            <Button fx:id="deleteColumnButton" mnemonicParsing="false" onAction="#deleteColumn" text="Delete column" />
            <Button fx:id="newTaskButton" mnemonicParsing="false" onAction="#newTask" text="New task" />
            <Button mnemonicParsing="false" text="&gt;&gt;" />
         </items>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </ToolBar>
      <VBox fx:id="tasksVBox" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
