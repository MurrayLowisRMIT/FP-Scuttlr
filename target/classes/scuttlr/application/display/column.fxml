<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="columnVBox1" fillWidth="false" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scuttlr.application.controllers.ColumnController">
   <children>
      <Label fx:id="columnName" text="Column name" />
      <ToolBar>
         <items>
            <Button mnemonicParsing="false" text="&lt;&lt;" />
            <Button fx:id="deleteColumnButton" mnemonicParsing="false" onAction="#deleteColumn" text="Delete list" />
            <Button fx:id="newTaskButton" mnemonicParsing="false" onAction="#createNewTask" text="New task" />
            <Button mnemonicParsing="false" text="&gt;&gt;" />
         </items>
      </ToolBar>
      <TitledPane fx:id="taskTitledPane" animated="false" text="Task name" wrapText="true">
         <content>
            <VBox>
               <children>
                  <ToolBar>
                     <items>
                        <Button mnemonicParsing="false" text="&lt;&lt;" />
                        <Button fx:id="deleteTaskButton" mnemonicParsing="false" onAction="#deleteTask" text="Delete task" />
                        <Button mnemonicParsing="false" text="&gt;&gt;" />
                        <CheckBox fx:id="completeCheckBox" mnemonicParsing="false" onAction="#checkComplete" text="Complete" />
                     </items>
                  </ToolBar>
                  <TextArea fx:id="taskDescription" maxWidth="250.0" promptText="Enter new task details" wrapText="true" />
                  <HBox alignment="CENTER" fillHeight="false">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Due date" />
                        <DatePicker fx:id="dueDatePicker" nodeOrientation="RIGHT_TO_LEFT" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
               </children>
            </VBox>
         </content>
         <graphic>
            <Pane />
         </graphic>
      </TitledPane>
   </children>
</VBox>
