<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scuttlr.application.controllers.TaskController">
   <children>
      <TitledPane fx:id="taskTitledPane" animated="false" focusTraversable="false" text="Task 1" wrapText="true">
         <content>
            <VBox>
               <children>
                  <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="10.0">
                     <children>
                        <Button fx:id="moveLeftButton" mnemonicParsing="false" onAction="#moveToLeftColumn" text="&lt;&lt;" />
                        <CheckBox fx:id="completeCheckBox" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#checkComplete" text="Complete" HBox.hgrow="ALWAYS" />
                        <Button fx:id="moveRightButton" mnemonicParsing="false" onAction="#moveToRightColumn" text="&gt;&gt;" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" />
                     </padding>
                  </HBox>
                  <TextArea fx:id="taskDescriptionTextArea" maxWidth="250.0" minHeight="100.0" promptText="Enter new task details" wrapText="true" />
                  <Label fx:id="taskWarningLabel" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" maxWidth="1.7976931348623157E308" text="Task overdue" textAlignment="CENTER" textFill="RED" visible="false" />
                  <HBox alignment="CENTER" fillHeight="false" maxWidth="1.7976931348623157E308">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" text="Due date" />
                        <DatePicker fx:id="dueDatePicker" nodeOrientation="RIGHT_TO_LEFT" onAction="#setDueDate" promptText="Enter date">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" />
                           </HBox.margin>
                        </DatePicker>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
               </children>
            </VBox>
         </content>
      </TitledPane>
      <ImageView fx:id="deleteTaskImageView" fitHeight="20.0" fitWidth="20.0" focusTraversable="true" layoutX="230.0" layoutY="2.5" onMouseClicked="#deleteTask" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../graphics/-%20button.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
</Pane>
