<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="columnVBox" fillWidth="false" maxWidth="250.0" minWidth="250.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scuttlr.application.controllers.ColumnController">
   <children>
      <TextField fx:id="columnNameTextField" alignment="CENTER" onInputMethodTextChanged="#updateColumnName" prefWidth="250.0" promptText="Column name" />
      <ToolBar fx:id="toolBar">
         <items>
            <Button fx:id="moveLeftButton" mnemonicParsing="false" text="&lt;&lt;" />
            <Button fx:id="deleteColumnButton" mnemonicParsing="false" onAction="#deleteColumn" text="Delete column" />
            <Button fx:id="newTaskButton" mnemonicParsing="false" onAction="#newTask" text="New task" />
            <Button mnemonicParsing="false" text="&gt;&gt;" />
         </items>
      </ToolBar>
      <VBox fx:id="tasksVBox" maxHeight="100.0" maxWidth="1.7976931348623157E308" minHeight="100.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
