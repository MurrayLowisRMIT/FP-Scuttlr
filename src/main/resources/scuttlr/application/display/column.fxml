<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="columnVBox" alignment="CENTER" fillWidth="false" xmlns="http://javafx.com/javafx/18"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="scuttlr.application.controllers.ColumnController">
    <children>
        <HBox fx:id="titleHBox" maxWidth="1.7976931348623157E308" spacing="10.0">
            <children>
                <TextField fx:id="titleTextField" alignment="CENTER" maxWidth="1.7976931348623157E308"
                           promptText="Enter column name" text="Column name" HBox.hgrow="ALWAYS"/>
                <Button fx:id="titleTextFieldButton" mnemonicParsing="false" onAction="#updateTitle" text="Rename"/>
            </children>
        </HBox>
        <ToolBar fx:id="toolBar">
            <items>
                <Button fx:id="moveLeftButton" mnemonicParsing="false" onAction="#moveColumnLeft" text="&lt;&lt;"/>
                <Button fx:id="deleteColumnButton" mnemonicParsing="false" onAction="#deleteColumn"
                        text="Delete column"/>
                <Button fx:id="newTaskButton" mnemonicParsing="false" onAction="#newTask" text="New task"/>
                <Button fx:id="moveRightButton" mnemonicParsing="false" onAction="#moveColumnRight" text="&gt;&gt;"/>
            </items>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </ToolBar>
        <VBox fx:id="tasksVBox" VBox.vgrow="ALWAYS"/>
    </children>
</VBox>
